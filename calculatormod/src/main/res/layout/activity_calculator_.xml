<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/text_icon_margin"
        >

        <ImageView
            android:id="@+id/icon_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/clear"
            />


        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_icon_margin"
            android:layout_toRightOf="@id/icon_id"
            android:text="CATEGORY"
            android:textStyle="bold"
            android:textSize="@dimen/text_h2_size"
            />


    </RelativeLayout>



    <TextView
        android:id="@+id/category_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="DATUM"
        android:textSize="@dimen/text_size"
        android:textStyle="italic"
        />



    <TextView
        android:id="@+id/comment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/expenditure_notes"
        android:textSize="@dimen/text_size"
        android:textStyle="italic"
        android:onClick="onCommentClick"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/calc_display"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="@dimen/size_of_displayed_content"
            android:background="@drawable/back"

            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="4"

            >

            <!-- rad 1 - division, 7, 8, 9 -->

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:layout_gravity="center_vertical"
                android:onClick="onButtonClick"
                android:tag="/"
                android:text="/"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="7"
                android:text="7"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="8"
                android:text="8"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="9"
                android:text="9"
                android:textSize="@dimen/button_text_size" />


            <!-- rad 2 - mult., 4, 5, 6 -->

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:layout_gravity="center_vertical"
                android:onClick="onButtonClick"
                android:tag="*"
                android:text="*"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="4"
                android:text="4"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="5"
                android:text="5"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="6"
                android:text="6"
                android:textSize="@dimen/button_text_size" />


            <!-- rad 3 - minus, 1, 2, 3 -->

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:layout_gravity="center_vertical"
                android:onClick="onButtonClick"
                android:tag="-"
                android:text="-"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="1"
                android:text="1"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="2"
                android:text="2"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="3"
                android:text="3"
                android:textSize="@dimen/button_text_size" />


            <!-- rad 4 - add, 0, comma, clear -->

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:layout_gravity="center_vertical"
                android:onClick="onButtonClick"
                android:tag="+"
                android:text="+"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="0"
                android:text="0"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/decimalButton_id"
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:layout_gravity="center_vertical|center_horizontal"
                android:onClick="onButtonClick"
                android:tag="."
                android:text="."
                android:textSize="@dimen/button_text_size" />

            <ImageButton
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:elevation="3dp"
                android:onClick="onButtonClick"
                android:scaleType="fitCenter"
                android:src="@drawable/clear"
                android:tag="c" />


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- rad 5 - Ã¤r lika med, ok-button -->

            <Button
                android:layout_width="@dimen/calc_button_size"
                android:layout_height="@dimen/calc_button_size"
                android:layout_gravity="center_vertical"
                android:onClick="onButtonClick"
                android:tag="="
                android:text="="
                android:textSize="@dimen/button_text_size" />

            <Button
                android:layout_width="210dp"
                android:layout_height="@dimen/calc_button_size"
                android:onClick="onButtonClick"
                android:tag="ok"
                android:text="OK"
                android:textSize="@dimen/button_text_size" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>