<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:elevation="3dp"
        >

        <ImageView
            android:id="@+id/remove_icon_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/header_remove_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:text="xxx"
            android:textSize="@dimen/text_h2_size"
            android:textStyle="bold"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/remove_info_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/text_icon_margin"
            android:layout_marginRight="@dimen/text_icon_margin"
            android:layout_marginBottom="25dp"
            android:layout_centerHorizontal="true"
            android:text="@string/remove_info"
            android:textSize="@dimen/text_size"
            android:textStyle="italic"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/remove_info_text_id"
            android:layout_centerHorizontal="true"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:onClick="onOKcancelClick"
                android:tag="remove ok"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/remove_info_text_id"
                android:text="CANCEL"
                android:onClick="onOKcancelClick"
                android:tag="remove cancel"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>